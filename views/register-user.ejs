<%- include('./layouts/header') %>

	<h2>Student Registration Form</h2>
	<form action="/auth/register-user" method="POST">
		<label for="name">Name:</label>
		<input type="text" id="name" name="name" value="<%= locals.name ? name : '' %>"><br><br>

		<label for="email">Email:</label>
		<input type="email" name="email" value="<%= locals.email ? email : '' %>" readonly><br><br>


		<label for="section">City:</label>
		<input type="text" id="city" name="city" value="<%= locals.city ? city : '' %>"><br><br>

		<label for="password">Password:</label>
		<input type="password" id="password" name="password" required><br><br>

		<label for="password2">Confirm:</label>
		<input type="password" id="password2" name="password2" required><br><br>

		<input type="submit" value="Submit">
	</form>

	<%- include('./layouts/footer') %>